<%- include('Partials/Header.ejs'); -%>
    <%- include('Partials/Menu.ejs'); -%>

        <div class="Layout-Container Settings-Container">
            <div class="Right">
                <img src="Img/avatar.png" alt="" srcset="">

                <div class="card-item gray">
                    <i class='item-icon bx bx-user'></i>
                    <div class="center">
                        <p>الاسم</p>
                        <h3 class="UsernameInner"><%= User.Username %></h3>
                    </div>
                </div>
                <div class="card-item gray">
                    <i class='item-icon bx bx-location-plus'></i>
                    <div class="center">
                        <p>العنوان</p>
                        <h3 class="AddressInner"><%= User.Address %></h3>
                    </div>
                </div>
                <div class="card-item gray">
                    <i class='item-icon bx bx-phone'></i>
                    <div class="center">
                        <p>الهاتف</p>
                        <h3 class="PhoneInner"><%= User.Phone %></h3>
                    </div>
                </div>
                <div class="card-item gray">
                    <i class='item-icon bx bx-envelope'></i>
                    <div class="center">
                        <p>الإميل</p>
                        <h3 class="EmailInner"><%= User.Email %></h3>
                    </div>
                </div>
            </div>
            <div class="Left">
                <div class="Wrapper-button">
                    <button class="active" onclick="ChangeContainer(index = 0)"><i class="bx bx-user"></i> البيانات الشخصية</button>
                    <button onclick="ChangeContainer(index = 1)"><i class="bx bx-lock"></i>تغيير كلمة المرور</button>
                    <button onclick="ChangeContainer(index = 2)"><i class="bx bxs-store-alt"></i> بيانات المنشأة</button>
                    <button onclick="ChangeContainer(index = 3)"><i class="bx bx-cog"></i> الاعدادات العامة</button>
                </div>
                <div class="SubContainer">
                    <div class="ContainerStep active">
                        <div class="Form-header">
                            <div class="Wrapper-Tilte">
                                <h3>بياناتك الشخصية</h3>
                                <div class="line">
                                    <div></div>
                                    <div></div>
                                    <div></div>
                                </div>
                            </div>
                            <i href="#" class="Form-logo">
                                <img src="./Img/logo.png" alt="" srcset="">
                                <div class="logo-text">MARKET</div>
                            </i>
                        </div>
                        <div class="Form-body">
                            <div class="input-box">
                                <input type="text" value="<%= User.Username %>" class="Name" required>
                                <label>الاسم *</label>
                                <span class="bx bx-user"></span>
                            </div>
                            <div class="input-box">
                                <input type="text" value="<%= User.Address %>"  class="Address" required>
                                <label>العنوان</label>
                                <span class='bx bx-location-plus'></span>
                            </div>
                            <div class="input-box">
                                <input type="tel" value="<%= User.Phone %>" class="Phone" required>
                                <label>رقم الهاتف</label>
                                <i class='bx bx-phone'></i>
                                <span class='bx bx-phone'></span>
                            </div>
                            <div class="input-box">
                                <input type="email" value="<%= User.Email %>" class="Email" required>
                                <label>الاميل *</label>
                                <span class="bx bx-envelope"></span>
                            </div>
                        </div>
                        <div class="Form-footer">
                            <button type="button" onclick="PersonalData()" class="btn btn-Save">حفظ البيانات</button>
                        </div>
                    </div>
                    <div class="ContainerStep">
                        <div class="Form-header">
                            <div class="Wrapper-Tilte">
                                <h3>تغيير كلمة المرور</h3>
                                <div class="line">
                                    <div></div>
                                    <div></div>
                                    <div></div>
                                </div>
                            </div>
                            <i href="#" class="Form-logo">
                                <img src="./Img/logo.png" alt="" srcset="">
                                <div class="logo-text">MARKET</div>
                            </i>
                        </div>
                        <div class="Form-body">
                            <div class="input-box">
                                <input type="password" class="Password" required>
                                <label>كلمة المرور الحالية</label>
                                <span class='bx bx-lock'></span>
                            </div>
                            <div class="input-box">
                                <input type="password" class="NewPassword" required>
                                <label>كلمة المرور</label>
                                <span class='bx bx-lock'></span>
                            </div>
                            <div class="input-box">
                                <input type="password" class="ConfirmPassword" required>
                                <label>تأكيد كلمة المرور</label>
                                <span class='bx bx-lock'></span>
                            </div>
                        </div>
                        <div class="Form-footer">
                            <button onclick="ChangePassword()" class="btn btn-Save">حفظ البيانات</button>
                        </div>
                    </div>
                    <div class="ContainerStep">
                        <div class="Form-header">
                            <div class="Wrapper-Tilte">
                                <h3>بيانات نشاطك</h3>
                                <div class="line">
                                    <div></div>
                                    <div></div>
                                    <div></div>
                                </div>
                            </div>
                            <i href="#" class="Form-logo">
                                <img src="./Img/logo.png" alt="" srcset="">
                                <div class="logo-text">MARKET</div>
                            </i>
                        </div>
                        <div class="Form-body">
                            <div class="input-box">
                                <input type="text" value="<%= MainData.NameCompany %>" class="NameCompany" required>
                                <label>اسم النشاط *</label>
                                <span class="bx bxs-store-alt"></span>
                            </div>
                            <div class="Row grid-2">
                                <div class="input-box">
                                    <input type="text" value="<%= MainData.TypeCompany %>" class="TypeCompany" required>
                                    <label>نوع النشاط</label>
                                    <span class='bx bx-location-plus'></span>
                                </div>
                                <div class="input-box input-box-file">
                                    <input type="file" class="LogoCompany" required>
                                    <!-- <label>لوجو</label> -->
                                    <span class='bx bx-image'></span>
                                </div>
                            </div>
                            <div class="Row grid-2">
                                <div class="input-box">
                                    <input type="text" value="<%= MainData.CityCompany %>"  class="CityCompany" required>
                                    <label>المدينه</label>
                                    <span class='bx bx-location-plus'></span>
                                </div>
                                <div class="input-box">
                                    <input type="text" value="<%= MainData.AddressCompany %>"  class="AddressCompany" required>
                                    <label>العنوان تفصيلي</label>
                                    <span class='bx bx-location-plus'></span>
                                </div>
                            </div>
                            <div class="Row grid-2">
                                <div class="input-box">
                                    <input type="tel" value="<%= MainData.PhoneCompany1 %>"  class="PhoneCompany1" required>
                                    <label>رقم الهاتف</label>
                                    <i class='bx bx-phone'></i>
                                    <span class='bx bx-phone'></span>
                                </div>
                                <div class="input-box">
                                    <input type="tel" value="<%= MainData.PhoneCompany2 %>"  class="PhoneCompany2" required>
                                    <label>رقم الهاتف اخر</label>
                                    <i class='bx bx-phone'></i>
                                    <span class='bx bx-phone'></span>
                                </div>
                            </div>
                        </div>

                        <div class="Form-footer">
                            <button onclick="CompanyData()" class="btn btn-Save">حفظ البيانات</button>
                        </div>
                    </div>

                    <div class="ContainerStep">
                        <div class="Form-header">
                            <div class="Wrapper-Tilte">
                                <h3>الاعدادات العامة</h3>
                                <div class="line">
                                    <div></div>
                                    <div></div>
                                    <div></div>
                                </div>
                            </div>
                            <i href="#" class="Form-logo">
                                <img src="./Img/logo.png" alt="" srcset="">
                                <div class="logo-text">MARKET</div>
                            </i>
                        </div>
                        <!-- <h4>سيتم حفظ جميع التغييرات تلقائي</h4> -->
                        <div class="Form-body">
                            <div class="card-item primary">
                                <i class='item-icon bx bx-volume-full'></i>
                                <div class="center">
                                    <h3>الرسالة الصوتية</h3>
                                    <p>الرسالة الصوتية عند القيام باي اجراء </p>
                                </div>
                                <div class="left toggle-box">
                                    <input type="checkbox" <% if (User.VoiceMessage === true) { %> checked <% } %> id="VoiceMessage" />
                                    <label for="VoiceMessage"></label>
                                </div>
                            </div>
                            <div class="card-item orange">
                                <i class='item-icon bx bx-bell'></i>
                                <div class="center">
                                    <h3>الاشعارات</h3>
                                    <p>تلقي اشعارات عند اضافة بيانات او حدوث اي تغيير في البيانات</p>
                                </div>
                                <div class="left toggle-box">
                                    <input type="checkbox" <% if (User.Notfications === true) { %> checked <% } %>  id="Notfications" />
                                    <label for="Notfications"></label>
                                </div>
                            </div>
                            <div class="card-item green">
                                <i class='item-icon bx bxs-moon'></i>
                                <div class="center">
                                    <h3>الوضع الليلي</h3>
                                    <p>يمكنك تفعيل الوضع الليلي </p>
                                </div>
                                <div class="left toggle-box">
                                    <input type="checkbox" <% if (User.DarkMood === true) { %> checked <% } %> onchange="DarkMood()" id="DarkMood" />
                                    <label for="DarkMood"></label>
                                </div>
                            </div>
                        </div>
                        <div class="Form-footer">
                            <button onclick="Settings()" class="btn btn-Save">حفظ البيانات</button>
                        </div>
                    </div>
                    <div class="ContainerStep ConfirmEmail">
                        <div class="Form-header">
                            <div class="Wrapper-Tilte">
                                <h3>تأكيد الإميل</h3>
                                <div class="line">
                                    <div></div>
                                    <div></div>
                                    <div></div>
                                </div>
                            </div>
                            <i href="#" class="Form-logo">
                                <img src="./Img/logo.png" alt="" srcset="">
                                <div class="logo-text">MARKET</div>
                            </i>
                        </div>
                        <h4>تم ارسال كود تأكيد البريد الالكتروني مكون من 6 ارقام يرجي ادخال هذا الكود </h4>
                        <div class="Form-body">
                            <div class="DivCodeTxt">
                              <input class="CodeTxt" type="text" required>
                              <input class="CodeTxt" type="text" disabled>
                              <input class="CodeTxt" type="text" disabled>
                              <input class="CodeTxt" type="text" disabled>
                              <input class="CodeTxt" type="text" disabled>
                              <input class="CodeTxt" type="text" disabled>
                            </div>
                          </div>

                        <div class="Form-footer">
                            <button onclick="Verify()" class="btn btn-Save btn-OTP">تأكيد</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>



         <%- include('partials/Footer.ejs'); -%> 

        <script src="js/23-Settings.js"></script>



        </body>

        </html>